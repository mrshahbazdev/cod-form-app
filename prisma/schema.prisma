// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Session {
  id            String   @id
  shop          String
  state         String
  isOnline      Boolean  @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean  @default(false)
  locale        String?
  collaborator  Boolean? @default(false)
  emailVerified Boolean? @default(false)
}

model ShippingRate {
  id        Int     @id @default(autoincrement())
  shop      String
  country   String
  city      String? // Optional for country-level rates
  rate      Float
  currency  String  @default("PKR") // NAYI FIELD

  @@unique([shop, country, city], name: "shop_country_city")
}


model AppSettings {
  id                         Int      @id @default(autoincrement())
  shop                       String   @unique
  otpEnabled                 Boolean  @default(false)

  twilioAccountSid           String?
  twilioAuthToken            String?
  twilioPhoneNumber          String?
  twilioVerifySid            String?

  // NAYI FIELDS SPAM PROTECTION KE LIYE:
  orderSpamProtectionEnabled Boolean  @default(false)
  orderSpamTimeLimit         Int?     @default(5) // Minutes
}

model OrderLog {
  id        Int      @id @default(autoincrement())
  shop      String
  phone     String
  createdAt DateTime @default(now())

  @@index([shop, phone])
}

// NAYI TABLE IP BLOCKING KE LIYE:
model BlockedIp {
  id        Int      @id @default(autoincrement())
  shop      String
  ipAddress String
  createdAt DateTime @default(now())

  @@unique([shop, ipAddress], name: "shop_ip")
}
